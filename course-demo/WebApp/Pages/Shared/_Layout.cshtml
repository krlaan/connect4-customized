@{ var userId = Context.Request.Query["userId"].FirstOrDefault(); }
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">WebApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @if (!string.IsNullOrEmpty(userId)) {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Games/Index" asp-route-userId="@userId">Games</a>
                        } else {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Games/Index">Games</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (!string.IsNullOrEmpty(userId)) {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Configs/Index" asp-route-userId="@userId">Configs</a>
                        } else {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Configs/Index">Configs</a>
                        }
                    </li>
                    <li class="nav-item">
                        @if (!string.IsNullOrEmpty(userId)) {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy" asp-route-userId="@userId">Privacy</a>
                        } else {
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - WebApp - 
        @if (!string.IsNullOrEmpty(userId)) {
            <a asp-area="" asp-page="/Privacy" asp-route-userId="@userId">Privacy</a>
        } else {
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        }
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>