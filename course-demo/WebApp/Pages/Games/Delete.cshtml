@page
@model WebApp.Pages_Games.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container pt-3 pb-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Confirm Deletion</h1>
        <p class="text-muted mb-0">This action cannot be undone.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-5 fw-bold text-muted">Game Name</dt>
                        <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.Game.GameName)</dd>
                        
                        <dt class="col-sm-5 fw-bold text-muted">Player 1 Name</dt>
                        <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.Game.Player1Name)</dd>
                        
                        <dt class="col-sm-5 fw-bold text-muted">Player 2 Name</dt>
                        <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.Game.Player2Name)</dd>
                        
                        <dt class="col-sm-5 fw-bold text-muted">Configuration</dt>
                        <dd class="col-sm-7 mb-3">@Html.DisplayFor(model => model.Game.Config!.ConfigName)</dd>
                        
                        <dt class="col-sm-5 fw-bold text-muted">Game Type</dt>
                        <dd class="col-sm-7 mb-3">@Model.Game.Config!.GameTypeDisplayName</dd>
                        
                        <dt class="col-sm-5 fw-bold text-muted">AI Difficulty</dt>
                        <dd class="col-sm-7 mb-0">@Model.Game.Config!.AiDifficultyDisplayName</dd>
                    </dl>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <form method="post" class="flex-grow-1">
                            <input type="hidden" name="id" value="@Model.GameId" />
                            @if (Model.UserId.HasValue) { <input type="hidden" name="userId" value="@Model.UserId.Value" /> }
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </form>
                        @if (Model.UserId.HasValue)
                        {
                            <a asp-page="./Index" asp-route-userId="@Model.UserId.Value" class="btn btn-outline-secondary flex-grow-1">Back</a>
                        }
                        else
                        {
                            <a asp-page="./Index" class="btn btn-outline-secondary flex-grow-1">Back</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
