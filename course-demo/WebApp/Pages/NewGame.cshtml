@page
@model WebApp.Pages.NewGame

<div class="container pt-3 pb-5">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Start a New Game</h1>
        <p class="text-muted mb-0">Configure players and board settings.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form method="post">
                        @if (Model.UserId.HasValue)
                        {
                            <input type="hidden" name="userId" value="@Model.UserId.Value" />
                        }
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="GameName" class="form-label">Game Name</label>
                            <input asp-for="GameName" class="form-control" />
                            <span asp-validation-for="GameName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ConfigId" class="form-label">Choose Configuration</label>
                            <select asp-for="ConfigId" class="form-select" asp-items="Model.ConfigurationSelectList"></select>
                            <span asp-validation-for="ConfigId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GameMode" class="form-label">Game Mode</label>
                            <select asp-for="GameMode" class="form-select">
                                <option value="pvp">Player vs Player</option>
                                <option value="pvai">Player vs AI</option>
                                <option value="aivai">AI vs AI</option>
                                <option value="multiplayer">Multiplayer</option>
                            </select>
                            <span asp-validation-for="GameMode" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Start Game</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>